{
  "scripts": {
    "create-env": "cp .env.example .env",
    "test": "npm run unit-test && npm run integration-test",
    "unit-test": "hardhat test test/unit/*",
    "integration-test": "bash ./test/integration/run.sh",
    "compile": "hardhat compile",
    "dev": "ts-node-dev oracle/index.ts",
    "build": "tsc oracle/*.ts --outDir build --resolveJsonModule --esModuleInterop",
    "start": "node build/oracle/index.js",
    "lint": "solhint 'contracts/**/*.sol' && eslint . --max-warnings=0",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.ts'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts'"
  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "ethers": "^5.7.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "axios": "^1.0.0",
    "chai-http": "^4.3.0",
    "eslint": "^8.23.1",
    "hardhat": "^2.11.2",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.4",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "prisma": "^4.3.1",
    "solhint": "^3.3.7",
    "ts-node-dev": "^2.0.0"
  },
  "pre-commit": "format",
  "pre-push": [
    "lint",
    "format:check"
  ]
}
